{
  "expo": {
    "name": "MyDriftLAB",
    "slug": "driftlab",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "driftlab",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#B5BCDA"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.sltrdigital.driftlab",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "MyDriftLAB uses the microphone to monitor your sleep environment and detect noise disruptions. Audio is processed on-device and never uploaded.",
        "NSMotionUsageDescription": "MyDriftLAB uses motion sensors to detect movement during sleep.",
        "UIBackgroundModes": [
          "audio",
          "processing"
        ],
        "BGTaskSchedulerPermittedIdentifiers": [
          "com.sltrdigital.driftlab.background-processing"
        ],
        "ITSAppUsesNonExemptEncryption": false
      },
      "buildNumber": "16",
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.access": [
          "health-records"
        ]
      }
    },
    "android": {
      "package": "com.sltrdigital.driftlab",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B0E14"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.WRITE_SETTINGS"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      [
        "expo-av",
        {
          "microphonePermission": "MyDriftLAB uses the microphone to monitor your sleep environment and detect noise disruptions."
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "MyDriftLAB uses motion sensors to detect movement during sleep."
        }
      ],
      "expo-brightness",
      "react-native-iap",
      "@react-native-community/datetimepicker",
      [
        "@kingstinct/react-native-healthkit",
        {
          "NSHealthShareUsageDescription": "MyDriftLab reads sleep stages, heart rate variability, and respiratory data from Apple Health to enrich your sleep insights.",
          "NSHealthUpdateUsageDescription": "MyDriftLab writes your sleep sessions and breathing data to Apple Health so all your health data stays in one place."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1a93b479-7e3c-417a-936c-62011ee31aab"
      }
    },
    "owner": "memoryaisle"
  }
}
